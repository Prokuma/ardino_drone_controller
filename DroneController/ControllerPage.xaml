<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DroneController.ControllerPage">
	<ContentPage.Content>
		<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
			<Label Text="throttle"/>
			<Slider x:Name="throttleSlider"
				Minimum="0"
				Maximum="255"
				HorizontalOptions="FillAndExpand"
				/>
			
			<Label Text="roll"/>
			<Slider x:Name="rollSlider"
				Minimum="-50"
				Maximum="50"
				HorizontalOptions="FillAndExpand"
				/>
			<Button x:Name="rollZeroButton"
				Text="Set roll 0"
				HorizontalOptions="Center"
				/>

			<Label Text="pitch"/>
			<Slider x:Name="pitchSlider"
				Minimum="-50"
				Maximum="50"
				HorizontalOptions="FillAndExpand"
				/>
			<Button x:Name="pitchZeroButton"
				Text="Set roll 0"
				HorizontalOptions="Center"
				/>

			<Label Text="yaw"/>
			<Slider x:Name="yawSlider"
				Minimum="-50"
				Maximum="50"
				HorizontalOptions="FillAndExpand"
				/>
			<Button x:Name="yawZeroButton"
				Text="Set roll 0"
				HorizontalOptions="Center"
				/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
